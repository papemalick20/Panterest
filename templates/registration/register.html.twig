
{% extends 'layouts/base.html.twig' %}

{% block title 'Register' %}
{% block body %}
<div class="row">
   <div class="col-md-6 mx-auto">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-error rounded mb-3" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="text-center mb-5">Creat an account</h1>

    {{ form_start(registrationForm) }}
     <div class="row">
       <div class="col-md-6">
         {{ form_row(registrationForm.firstName) }}
       </div>

       <div class="col-md-6">
       {{ form_row(registrationForm.lastName) }}
       </div>
     </div>
        
        
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-primary btn-lg btn-block" formnovalidate>Register</button>
        <p class="mt-5 mb-3 text-center text-muted">
         Already have account <a href="{{path('app_login')}}">log in</a>
        </p>
        
    {{ form_end(registrationForm) }}
    </div>
     </div>
{% endblock %}
