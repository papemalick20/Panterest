{% extends 'layouts/base.html.twig' %}

{% block title 'Find all the best pins earth' %}

{% block body %}
   {% if pins|length > 0 %}
 <h1 class="mb-5 text-center text-muted ">{{ pluralize(pins|length,   'Pin')}} </h1>
  {% for row in pins|batch(3) %}
 <div class="row mb-5">
 {% for pin in row %}
  <div class="col-md-4">
   <article class=" pin bg-white rounded shadow">
     <div class="mw-100 rounded-top overflow-hidden">
      <a href="{{path('app_pins.show', {id: pin.id})}}">
      <img src="{{ (pin.imageName ? vich_uploader_asset(pin) : asset('build/images/calcul.jpg')) | imagine_filter('squared_thumbnail_medium')}}"
       alt="{{ pin.title }}" class="w-100 " />
     </a>
     </div>
    <h2 class="h5 pl-3 pt-3"><a href="{{path('app_pins.show', {id: pin.id})}}"
     class=" text secondary text-muted text-decoration-none"> {{pin.title}}</a></h1>
    <p class="text-muted pl-3 pb-3"><small>Submitted by {{ pin.user.fullName}}</small></p>
   </article>
   </div>
   {% endfor %}
   </div>
   {% endfor %}

   {% else %}
    <p class ="h1 mt-5 text-center">Not pins yet. <a href="{{path('app_pins.create')}}">Be the first!</a></p>
   {% endif %}
{% endblock %}
