{% extends 'layouts/base.html.twig' %}

{% block title pin.title %}

{% block body %}
 <div class="row">
 <div class="col-md-6 mx-auto">
   <article>
    <article class=" pin bg-white rounded shadow">
     <div class="mw-100 rounded-top overflow-hidden">
      <a href="{{path('app_pins.show', {id: pin.id})}}">
      <img src="{{ vich_uploader_asset(pin) | imagine_filter('squared_thumbnail_medium')}}"
       alt="{{ pin.title }}" class="w-100 " />
     </a>
     </div>
     <h1 class="h5 pl-3 pt-3"><a href="{{path('app_pins.show', {id: pin.id})}}"
     class=" text secondary text-muted text-decoration-none"> {{pin.title}}</a></h1>
      <p class="pl-3 pb-3 text-muted">
       <small>
         Submitted 
         <time datetime ="{{pin.createdAt|date('Y-m-d H:i:s')}}">
         {{pin.createdAt | ago}} </time>by [Thioune Name]
       </small>
      </p>
      <p class="pl-3 pb-3">
       {{pin.description}}
      </p>
      <div class='pl-3 pb-3'>
      <a href="{{path('app_pins.edit', {id: pin.id})}}" class="btn btn-light">Edit</a>
   <a href="#" onclick="event.preventDefault(); confirm('Are you sure ?') && 
     document.getElementById('js-pin-delete-form').submit();" class="btn btn-light">Delete</a>
   {# <a href="{{path('app.home')}}">Go Back</a> #}
    <form id ="js-pin-delete-form" action ="{{path('app_pins.delete', {id: pin.id})}}" method ="post"
     style= "display:none;">
    <input type ="hidden" name = "csrf_token" value ="{{csrf_token('pin_deletion_' ~ pin.id)}}">
    <input type ="hidden" name ="_method" value="DELETE">
   </div>
   </article>
   </from>
   </div>
   </div>
   
{% endblock %}
