{% extends 'layouts/base.html.twig' %}

{% block title 'Log in!' %}

{% block body %}
<div class="row">
  <div class="col-md-6 mx-auto">
  <h1 class="text-center mt-5 mb-3">Please sign in</h1>
  <p class=" mb-5 text-center text-muted">your pins are wating for you</p>
     <form method="post">
    {% if error %}
        <div class="alert alert-error rounded mb-3" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="form-group">
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    </div>

    <div class="form-group">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
    </div>

    <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">

    
      <div class="d-flex justify-content-between">
        <div class="checkbox mb-3">
            <label>
                <input class="form-check-inpu" type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>

        <a href="#">forgot passsword?</a>

        </div>
   
  
    <button class="btn btn-lg btn-primary btn-block" type="submit" formnovalidate>
        Sign in
    </button>
    <p class="mt-5 mb-3 text-center text-muted">Not registered yet?   <a href=""{{path('app_register')}}"">Create an account</a></p>
    
</form>
  </div>
</div>

{% endblock %}
